<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal|center"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
         >

        <TextView
            android:id="@+id/tituloComicSeleccionado"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/tituloComicSeleccionado"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imagenCarritoCompra"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/botoncarritocomprablanco" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_weight="0.005" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal|center"
            android:background="#000000"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageComicSelected1"
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:layout_gravity="top|center"
                android:gravity="center"
                android:src="@drawable/emptyimage" />

            <TextView
                android:id="@+id/descripcionComicSeleccionadoAqui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/descripcionComicSeleccionado"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal|center"
        android:layout_weight="0.02"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imagenbotonCategorias"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:src="@drawable/botoncategoriassuelo" />

        <ImageView
            android:id="@+id/imagenboton85"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:src="@drawable/boton85suelo" />

        <ImageView
            android:id="@+id/imagenbotonAZ"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:src="@drawable/botonazsuelo" />
    </LinearLayout>

</LinearLayout>