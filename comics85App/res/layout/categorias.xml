<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_gravity="center_vertical"
    android:background="@drawable/backrepeat">

     
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:layout_weight="1" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="0.5"
                android:orientation="horizontal" >

                 <ImageView
                     android:id="@+id/imageAven"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:gravity="center_horizontal"
                     android:src="@drawable/categoriaaventuras" />

                <ImageView
                    android:id="@+id/imageCF"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/categoriacf" />

                </LinearLayout> 
                <LinearLayout 
               		android:orientation="horizontal"
                	android:layout_width="match_parent"
                    android:gravity="center"            	
                	android:layout_height="wrap_content">
                 <ImageView
            		android:id="@+id/imageCotidiano"
            		android:layout_width="150dp"
            		android:layout_height="150dp"
            		android:src="@drawable/categoriacotidiano" />
                <ImageView
            		android:id="@+id/imageErotico"
            		android:layout_width="150dp"
            		android:layout_height="150dp"
            		android:src="@drawable/categoriaerotico" />
                </LinearLayout> 
               <LinearLayout 
               		android:gravity="center"
               		android:orientation="horizontal"
                	android:layout_width="match_parent"
                	android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/imageFantasia"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:src="@drawable/categoriafantasia" />

                <ImageView
                    android:id="@+id/imageGeneroNegro"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/categoriageneronegro" />

                </LinearLayout>
                <LinearLayout 
               		android:orientation="horizontal"
               		android:gravity="center"
                	android:layout_width="match_parent"
                	android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/imageHistoria"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:src="@drawable/categoriahistoria" />

                <ImageView
                    android:id="@+id/imageHumor"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/humor" />

                </LinearLayout> 
				<LinearLayout 
               		android:orientation="horizontal"
               		android:gravity="center"
                	android:layout_width="match_parent"
                	android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/imageInfantil"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:src="@drawable/categoriainfantil" />

                <ImageView
                    android:id="@+id/imageSuperheroes"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/categoriasuperheroes" />

                </LinearLayout> 
                <LinearLayout 
               		android:orientation="horizontal"
                	android:layout_width="match_parent"
                	android:gravity="center"
                	android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/imageTerror"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:src="@drawable/terror" />

                <ImageView
                    android:id="@+id/imageWestern"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/categoriawestern" />

                </LinearLayout> 
                
     		</LinearLayout>

    </ScrollView>
  
        	<Button
        	    android:id="@+id/categoriasComicsAtoZButton"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_centerHorizontal="true"
        	    android:layout_gravity="center_horizontal"
        	    android:layout_marginBottom="20dp"
        	    android:layout_marginTop="20dp"
        	    android:layout_weight="0.05"
        	    android:text="@string/az"
        	    android:textColor="#000000"
        	    android:textSize="25dp" />

</LinearLayout>
